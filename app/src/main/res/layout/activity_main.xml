<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_layout"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="140dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="60dp"></TextView>

    <TextView
        android:id="@+id/result_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/button_layout"
        android:layout_margin="10dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="60dp"></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/button_layout"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_c"
            style="@style/Theme.MyCalculator"
            android:layout_width="102dp"
            android:layout_height="80dp"
            android:text="C"
            android:textSize="40dp"
            app:backgroundTint="@android:color/holo_blue_dark"
            app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_open_bracket"
            style="@style/Theme.MyCalculator"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:text="("
            android:textSize="40dp"
            app:backgroundTint="@android:color/holo_orange_dark"
            app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_close_bracket"
            style="@style/Theme.MyCalculator"
            android:layout_width="102dp"
            android:layout_height="match_parent"
            android:text=")"
            android:textSize="40dp"
            app:backgroundTint="@android:color/holo_orange_dark"
            app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_eqaulto"
            style="@style/Theme.MyCalculator"
            android:layout_width="103dp"
            android:layout_height="match_parent"
            android:text="="
            android:textSize="40dp"
            app:backgroundTint="@color/purple_200"
            app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>


    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_one"
                style="@style/Theme.MyCalculator"
                android:layout_width="102dp"
                android:layout_height="80dp"
                android:text="1"
                android:textSize="40dp"
                app:backgroundTint="@color/teal_700"
                app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_two"
                style="@style/Theme.MyCalculator"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="40dp"
                app:backgroundTint="@color/teal_700"
                app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_three"
                style="@style/Theme.MyCalculator"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="40dp"
                app:backgroundTint="@color/teal_700"
                app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_add"
                style="@style/Theme.MyCalculator"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="40dp"
                app:backgroundTint="@color/purple_200"
                app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_four"
                style="@style/Theme.MyCalculator"
                android:layout_width="102dp"
                android:layout_height="80dp"
                android:text="4"
                android:textSize="40dp"
                app:backgroundTint="@color/teal_700"
                app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_five"
                style="@style/Theme.MyCalculator"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="40dp"
                app:backgroundTint="@color/teal_700"
                app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_six"
                style="@style/Theme.MyCalculator"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="40dp"
                app:backgroundTint="@color/teal_700"
                app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_sub"
                style="@style/Theme.MyCalculator"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="40dp"
                app:backgroundTint="@color/purple_200"
                app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_seven"
                style="@style/Theme.MyCalculator"
                android:layout_width="102dp"
                android:layout_height="80dp"
                android:text="7"
                android:textSize="40dp"
                app:backgroundTint="@color/teal_700"
                app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_eight"
                style="@style/Theme.MyCalculator"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="40dp"
                app:backgroundTint="@color/teal_700"
                app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_nine"
                style="@style/Theme.MyCalculator"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="40dp"
                app:backgroundTint="@color/teal_700"
                app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_mul"
                style="@style/Theme.MyCalculator"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:text="*"
                android:textSize="40dp"
                app:backgroundTint="@color/purple_200"
                app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_zero"
                style="@style/Theme.MyCalculator"
                android:layout_width="102dp"
                android:layout_height="80dp"
                android:text="0"
                android:textSize="40dp"
                app:backgroundTint="@color/teal_700"
                app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_ac"
                style="@style/Theme.MyCalculator"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:text="AC"
                android:textSize="40dp"
                app:backgroundTint="@android:color/holo_blue_dark"
                app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                style="@style/Theme.MyCalculator"
                android:layout_width="102dp"
                android:layout_height="match_parent"
                android:text="."
                android:textSize="40dp"
                app:backgroundTint="@color/purple_200"
                app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_div"
                style="@style/Theme.MyCalculator"
                android:layout_width="103dp"
                android:layout_height="match_parent"
                android:text="/"
                android:textSize="40dp"
                app:backgroundTint="@color/purple_200"
                app:cornerRadius="22dp"></com.google.android.material.button.MaterialButton>


        </LinearLayout>



    </LinearLayout>







</RelativeLayout >